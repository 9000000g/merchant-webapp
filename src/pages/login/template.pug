fv-main
    fv-header
        fv-button.fv-primary.fv-icon(@click="$store.state.sidebar.toggle()")
            i.fa.fa-bars
        div.fv-title
            h2(v-html="title")
        fv-button.fv-primary.fv-icon(@click="$store.commit('go', -1)")
            i.fa.fa-chevron-left
    fv-content.no-padding
        div.fv-row
            form.fv-col-sm-1of2.fv-col-offset-sm-3of12.fv-col-xs-1of1(@submit.prevent="login()")
                div.fv-col-sm-1of1
                    label.fv-control-label نام کاربری
                    fv-input.fv-form-control(type='text', v-model='user.username', placeholder='نام کاربری خود را وارد کنید.', required)
                div.fv-col-sm-1of1
                    label.fv-control-label رمز عبور
                    fv-input.fv-form-control(type='password', v-model='user.password', placeholder='رمز عبور خود را وارد کنید.', required)
                div.fv-col-sm-1of1.fv-col-sm-1of1
                    label.fv-control-label
                    fv-button.fv-primary.fv-block(type='submit') ورود
